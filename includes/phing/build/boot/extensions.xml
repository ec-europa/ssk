<?xml version="1.0" encoding="UTF-8" ?>

<project name="extensions" description="Custom classes for extra tasks, conditions, etc." default="">

    <!-- External tasks that are a composer dependency. -->
    <import file="${toolkit.dir.vendor}/drupal/phingdrushtask/import.xml" />
    <import file="${toolkit.dir.vendor}/drupol/phingbehattask/import.xml" />
    <import file="${toolkit.dir.vendor}/kasperg/phing-github/import.xml" />

    <!-- Custom task definititons. -->
    <taskdef name="docgen" classname="Phing\Toolkit\Tasks\DocGeneratorTask" />
    <taskdef name="drushgal" classname="Phing\Toolkit\Tasks\DrushGenerateAliasTask" />
    <taskdef name="drushmf" classname="Phing\Toolkit\Tasks\DrushMakeFileTask" />
    <taskdef name="drushms" classname="Phing\Toolkit\Tasks\DrushMakeSecureTask" />
    <taskdef name="gitigmerge" classname="Phing\Toolkit\Tasks\GitignoreMergerTask" />
    <taskdef name="help" classname="Phing\Toolkit\Tasks\PhingHelpTask" />
    <taskdef name="phpcsconf" classname="Phing\Toolkit\Tasks\PhpCodeSnifferConfigurationTask" />
    <taskdef name="propval" classname="Phing\Toolkit\Tasks\PropertiesValidateTask" />
    <taskdef name="relsym" classname="Phing\Toolkit\Tasks\RelativeSymlinkTask" />
    <taskdef name="replacedby" classname="Phing\Toolkit\Tasks\PhingDeprecatedTask" />
    <taskdef name="symlink-property-contents" classname="Phing\Toolkit\Tasks\SymlinkPropertyContentTask" />

</project>
