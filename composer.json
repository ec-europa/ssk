{
    "name": "ec-europa/toolkit",
    "description": "Toolkit packaged for Drupal 8.",
    "license": "EUPL-1.2",
    "type": "library",
    "homepage": "https://github.com/ec-europa/toolkit",
    "minimum-stability": "beta",
    "prefer-stable": true,
    "support": {
        "email": "europamanagement@ec.europa.eu",
        "source": "https://github.com/ec-europa/toolkit"
    },
    "require": {
        "php": "^7.1",
        "guzzlehttp/guzzle": "^6.3",
        "drupal/console-core": "^1.8",
        "drupal/drupal-extension": "^3.4 || ^4.0",
        "drush/drush": "^9.0",
        "openeuropa/task-runner": "^1.0.0-beta5",
        "openeuropa/code-review": "^1.0.0-beta2"
    },
    "require-dev": {
        "phpunit/phpunit": "~6.0"
    },
    "autoload": {
        "psr-4": {
            "EcEuropa\\Toolkit\\": "./src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "EcEuropa\\Toolkit\\Tests\\": "./tests/"
        }
    },
    "extra": {
        "enable-patching": true,
        "composer-exit-on-patch-failure": true
    },
    "config": {
        "sort-packages": true,
        "platform": {
            "php": "7.1.9"
        }
    }
}
